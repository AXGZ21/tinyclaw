{
  "$schema": "https://railway.com/railway.schema.json",
  "name": "tinyclaw",
  "description": "Multi-agent, multi-team, multi-channel AI assistant framework",
  "repository": "https://github.com/AXGZ21/tinyclaw",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "./scripts/railway-start.sh",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "artifacts": [
    {
      "path": "./.tinyclaw",
      "glob": "**/*"
    }
  ]
}